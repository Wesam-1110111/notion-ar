{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],

    /* Modules */
    "module": "ESNext",
    "rootDir": "./ts",
    "types": ["chrome"],

    /* Emit */
    "outDir": "./js",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,


    /* Completeness */
    "skipLibCheck": true
  }
}
